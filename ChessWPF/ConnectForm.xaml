<UserControl x:Class="ChessWPF.ConnectForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid Background='#FFEEEEEE'>
    <StackPanel VerticalAlignment='Center' HorizontalAlignment='Center'>
      <Label Content='Введите логин' HorizontalAlignment='Center' VerticalAlignment='Center' FontFamily='Arial' FontSize='24' Margin='5,10'/>
      <TextBox x:Name='login_input' HorizontalAlignment='Center' VerticalAlignment='Center' FontSize='24'  Width='190' UndoLimit='10'/>
      <Button Content='Подключиться' FontSize='24' FontFamily='Arial' Padding='5' Height='50' Margin='0,10,0,0' x:Name='btn_connect' BorderThickness='0' Background='#FFEEEEEE' />
    </StackPanel>
  </Grid>
</UserControl>