<Window x:Class="ChessWPF.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessWPF"
        mc:Ignorable="d"
        Title="Result" Height="200" Width="400" WindowStyle='None' ResizeMode='NoResize' WindowStartupLocation='CenterScreen'>
  <Grid x:Name='res_grid'>
    <Grid.RowDefinitions>
      <RowDefinition Height='0.5*'/>
      <RowDefinition Height='1*'/>
      <RowDefinition Height='1*'/>
      <RowDefinition Height='1.3*'/>
      <RowDefinition Height='0.3*'/>
    </Grid.RowDefinitions>

    <StackPanel Orientation='Horizontal' Grid.Row='3' HorizontalAlignment='Center'>
      <Button x:Name='new_game' Content='Новая Игра' Click='New_game_Click' Margin='10,5' BorderThickness='1' BorderBrush='Black' Background='#FF2EF01B' Foreground='White'/>
      <Button x:Name='exit' Content='Выйти' Click='Exit_Click' Margin='10,5' BorderThickness='1' BorderBrush='Black' Background='Red' Foreground='White'/>
    </StackPanel>

  </Grid>
</Window>
